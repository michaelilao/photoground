<div id="modal" class="hidden z-10 top-0 left-0 w-full h-full bg-black/75 overflow-auto min-w-96">
  <div id="modal-content" class="w-full h-[80vh] m-auto fixed top-1/2 left-1/2 -translate-x-2/4 -translate-y-2/4 min-w-96 bg-smoke">
    <div class="w-full flex items-center">
      <div class="w-1/3"></div>
      <div id="delete-confirm-row" class="hidden w-2/3 md:w-1/3 flex justify-center">
        <button id="delete-cancel" class="btn btn-secondary mr-2">cancel</button>
        <button id="delete-confirm" class="btn btn-danger ml-2">delete</button>
      </div>
      <div id="action-row" class="w-2/3 md:w-1/3 flex justify-center">
        <button id="photo-rotate-left" class="p-1 m-1 rounded-full hover:bg-blue transition-colors">
          <img src="icons/rotate-left.svg" width="32" height="32" />
        </button>
        <button id="photo-rotate-right" class="p-1 m-1 rounded-full hover:bg-blue transition-colors">
          <img src="icons/rotate-right.svg" width="32" height="32" />
        </button>
        <button id="photo-delete" class="p-1 m-1 rounded-full hover:bg-red transition-colors">
          <img src="icons/trash.svg" width="32" height="32" />
        </button>
      </div>
      <div class="w-1/3">
        <button id="modal-close-button" class="ml-auto block p-2">
          <img class="" src="icons/close.svg" width="48" height="48" />
        </button>
      </div>
    </div>
    <img id="modal-image" class="m-auto w-auto max-h-[90%] px-2" loading=" lazy" src="" alt="modal image placeholder" />
  </div>
</div>
