<!doctype html>
<html lang="en">
  <%- include('../partials/head'); %>
  <script src="js/upload.js" defer></script>
  <body class="min-w-96">
    <header><%- include('../partials/nav'); %></header>
    <main>
      <section class="text-center m-auto w-11/12 md:w-1/2 pt-16">
        <h2 class="text-2xl py-2 font-bold">Upload Photos</h2>
        <div id="drop-area" class="border-2 border-dashed border-teal py-16 px-4 sm:px-12 mt-4">
          <form class="photo-upload" onsubmit="return false" action="">
            <img class="mx-auto py-4" src="icons/upload.svg" width="48" height="48" />
            <h3>drag and drop image</h3>
            <div>or</div>
            <div>
              <label class="btn btn-primary block w-64 mx-auto my-2 relative" for="upload">Browse </label>
              <input class="hidden" type="file" id="upload" multiple accept="image/*" onchange="handleFiles(this.files)" />
            </div>
            <button class="btn btn-primary hidden w-64 mx-auto my-2" id="submit">Submit</button>
            <div id="gallery" class="flex flex-wrap pt-8"></div>
          </form>
        </div>
      </section>
      <%- include('../partials/toast'); %>
    </main>
    <%- include('../partials/footer'); %>
  </body>
</html>
