<!doctype html>
<html lang="en">
  <%- include('../partials/head'); %>
  <script src="js/login.js"></script>
  <script src="js/forms.js"></script>
  <body>
    <header><%- include('../partials/nav'); %></header>
    <main>
      <section class="m-auto w-11/12 sm:w-1/3 pt-16">
        <div>
          <h2 class="text-2xl py-2 font-bold">login</h2>
          <h5 class="text-lg">your photos, off the cloud</h5>
        </div>
        <form action="" onsubmit="return false" id="login" class="my-4">
          <label class="" for="email">Email:</label>
          <input class="block w-full p-2 my-2 outline-2 outline-teal focus:outline" type="text" id="email" name="email" />

          <label class="" for="password">Password:</label>
          <div class="relative">
            <input class="block w-full p-2 my-2 outline-2 outline-teal focus:outline" type="password" id="password" name="password" />
            <button type="button" onclick="togglePassword()" class="absolute top-[20%] right-[2.5%] cursor-pointer" id="show">
              <img src="icons/eye-closed.svg" width="24" height="24" />
            </button>
          </div>
          <button class="my-4 btn btn-primary" onclick="login()">Login</button>
        </form>
      </section>
      <%- include('../partials/toast'); %>
    </main>
    <%- include('../partials/footer'); %>
  </body>
</html>
